<%= render 'commons/common', book: @book, user: @user %>
<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <p>
        <%=link_to '新しい順', books_path(latest: "true") %>|
        <%=link_to '古い順', books_path(old: "true")%>|
        <%= link_to '評価の高い順',books_path(star_count: "true") %>
      </p>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
    <tr>
      <td><%= link_to image_tag(book.user.get_profile_image(100,100)),user_path(book.user_id) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body%></td>
      <td>
        <div id = "index_like_<%= book.id %>">
          <%= render 'favorites/favorite', book: book %>
        </div>
      </td>
      <td><%= l book.created_at %></td>
      <td>
        <p>コメント数：<%= book.comments.count %></p>
      </td>
      <td width="180px">
        <%= render 'commons/raty', book: book %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
