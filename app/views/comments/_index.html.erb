 
   <% comments.each do |comment| %>
     <div id="comment_<%= comment.id %>">
      <%= image_tag comment.user.get_profile_image(100, 100) %>
      <%= comment.user.name %>
      <%= comment.content %>
      <% if comment.user_id == current_user.id %>
        <%= link_to  "Delete", book_comment_path(comment.book,comment),data: {confirm: '本当に削除しますか？'}, method: :delete, remote: true ,class: "btn btn-sm btn-danger ml-3" %>
      <% end %>
      <br>
     </div>
    <% end %>
 